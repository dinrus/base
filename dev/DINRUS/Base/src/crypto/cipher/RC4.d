    {
        ббайт[] состояние,
                рабочийКлюч;
        ббайт x, y;
    }
    
    export this()
    {
        состояние = new ббайт[256];
    }
    
    export  проц иниц(бул зашифруй, СимметричныйКлюч парамыКлюча)
    {
        if (парамыКлюча.ключ.length < 0 || парамыКлюча.ключ.length > 256)
            не_годится(имя()~": Неверный ключ length (требует 1-256 байты)");
                
        рабочийКлюч = парамыКлюча.ключ;
        установи(рабочийКлюч);
        
        _зашифровать = _инициализован = да;
    }
    
    export  override ткст имя()
    {
        return "RC4";
    }
    
   export  ббайт верниБбайт(ббайт ввод)
    {
        if (!_инициализован)
            не_годится(имя()~": Шифр не инициализован");
            
        y += состояние[++x];
        ббайт t = состояние[x];
        состояние[x] = состояние[y];
        состояние[y] = t;
        
        return (ввод^состояние[cast(ббайт)(состояние[x]+состояние[y])]);
    }
    
    export  override бцел обнови(проц[] ввод_, проц[] вывод_)
    {
        if (!_инициализован)
            не_годится(имя()~": Шифр не инициализован");
            
        ббайт[] ввод = cast(ббайт[]) ввод_,
                вывод = cast(ббайт[]) вывод_;
            
        if (ввод.length > вывод.length)
            не_годится(имя()~": Буфер вывода слишком краток");
            
        for (цел i = 0; i < ввод.length; i++)
        {
            y += состояние[++x];
            ббайт t = состояние[x];
            состояние[x] = состояние[y];
            состояние[y] = t;
            вывод[i] = ввод[i] ^ состояние[cast(ббайт)(состояние[x]+состояние[y])];
        }
        
        return ввод.length;
    }
    
    export  override проц сбрось()
    { 
        установи(рабочийКлюч);
    }
    
    // Do RC4's ключ установи in a separate метод в_ ease resetting
    private проц установи(ббайт[] ключ)
    {
        for (цел i = 0; i < 256; i++)
            состояние[i] = cast(ббайт)i;
            
        x = 0;
        for (цел i = 0; i < 256; i++)
        {
            x += ключ[i % ключ.length] + состояние[i];
            ббайт t = состояние[i];
            состояние[i] = состояние[x];
            состояние[x] = t;
        }
        
        x = y = 0;
    }
    
