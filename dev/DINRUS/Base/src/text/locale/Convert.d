export  ткст долВБинТкст (ткст буфер, бдол значение, цел цифры)
{
        if (цифры < 1)
            цифры = 1;

        цел n = буфер.length;
        while (--цифры >= 0 || значение != 0)
              {
              буфер[--n] = cast(сим)((значение & 1) + '0');
              значение >>= 1;
              }

        return буфер[n .. $];
}

/*******************************************************************************

*******************************************************************************/

 export сим разборОпределенияФормата (ткст формат, out цел длина)
{
        цел     i = -1;
        сим    определитель;

        if (формат.length)
           {
           auto s = формат[0];

           if (s >= 'A' && s <= 'Z' || s >= 'a' && s <= 'z')
              {
              определитель = s;

              foreach (c; формат [1..$])
                       if (c >= '0' && c <= '9')
                          {
                          c -= '0';
                          if (i < 0)
                             i = c;
                          else
                             i = i * 10 + c;
                          }
                       else
                          break;
              }
           }
        else
           определитель = 'G';

        длина = i;
        return определитель;
}

