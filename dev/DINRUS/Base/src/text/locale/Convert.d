        private проц округли (цел поз)
        {
                цел индекс;
                while (индекс < поз && цифры[индекс] != '\0')
                       индекс++;

                if (индекс == поз && цифры[индекс] >= '5')
                   {
                   while (индекс > 0 && цифры[индекс - 1] == '9')
                          индекс--;

                   if (индекс > 0)
                       цифры[индекс - 1]++;
                   else
                      {
                      шкала++;
                      цифры[0] = '1';
                      индекс = 1;
                      }
                   }
                else
                   while (индекс > 0 && цифры[индекс - 1] == '0')
                          индекс--;

                if (индекс == 0)
                   {
                   шкала = 0;
                   знак = нет;
                   }

                цифры[индекс] = '\0';
        }
