                        0xc800000000000000UL,
                        0xfa00000000000000UL,
                        0x9c40000000000000UL,
                        0xc350000000000000UL,
                        0xf424000000000000UL,
                        0x9896800000000000UL,
                        0xbebc200000000000UL,
                        0xee6b280000000000UL,
                        0x9502f90000000000UL,
                        0xba43b74000000000UL,
                        0xe8d4a51000000000UL,
                        0x9184e72a00000000UL,
                        0xb5e620f480000000UL,
                        0xe35fa931a0000000UL,
                        0xcccccccccccccccdUL,
                        0xa3d70a3d70a3d70bUL,
                        0x83126e978d4fdf3cUL,
                        0xd1b71758e219652eUL,
                        0xa7c5ac471b478425UL,
                        0x8637bd05af6c69b7UL,
                        0xd6bf94d5e57a42beUL,
                        0xabcc77118461ceffUL,
                        0x89705f4136b4a599UL,
                        0xdbe6fecebdedd5c2UL,
                        0xafebff0bcb24ab02UL,
                        0x8cbccc096f5088cfUL,
                        0xe12e13424bb40e18UL,
                        0xb424dc35095cd813UL,
                        0x901d7cf73ab0acdcUL,
                        0x8e1bc9bf04000000UL,
                        0x9dc5ada82b70b59eUL,
                        0xaf298d050e4395d6UL,
                        0xc2781f49ffcfa6d4UL,
                        0xd7e77a8f87daf7faUL,
                        0xefb3ab16c59b14a0UL,
                        0x850fadc09923329cUL,
                        0x93ba47c980e98cdeUL,
                        0xa402b9c5a8d3a6e6UL,
                        0xb616a12b7fe617a8UL,
                        0xca28a291859bbf90UL,
                        0xe070f78d39275566UL,
                        0xf92e0c3537826140UL,
                        0x8a5296ffe33cc92cUL,
                        0x9991a6f3d6bf1762UL,
                        0xaa7eebfb9df9de8aUL,
                        0xbd49d14aa79dbc7eUL,
                        0xd226fc195c6a2f88UL,
                        0xe950df20247c83f8UL,
                        0x81842f29f2cce373UL,
                        0x8fcac257558ee4e2UL,
                        ];

                const   бцел[] pow10Exp =
                        [
                        4, 7, 10, 14, 17, 20, 24, 27, 30, 34,
                        37, 40, 44, 47, 50, 54, 107, 160, 213, 266,
                        319, 373, 426, 479, 532, 585, 638, 691, 745, 798,
                        851, 904, 957, 1010, 1064, 1117
                        ];

                бцел дайЦифры(сим* p, цел длин)
                {
                        сим* конец = p + длин;
                        бцел r = *p - '0';
                        p++;
                        while (p < конец)
                              {
                              r = 10 * r + *p - '0';
                              p++;
                              }
                        return r;
                }

                бдол mult64(бцел val1, бцел val2)
                {
                        return cast(бдол)val1 * cast(бдол)val2;
                }

                бдол mult64L(бдол val1, бдол val2)
                {
                        бдол знач = mult64(cast(бцел)(val1 >> 32), cast(бцел)(val2 >> 32));
                        знач += mult64(cast(бцел)(val1 >> 32), cast(бцел)val2) >> 32;
                        знач += mult64(cast(бцел)val1, cast(бцел)(val2 >> 32)) >> 32;
                        return знач;
                }

                auto p = цифры.ptr;
                цел счёт = симвОкончание(p);
                цел лево = счёт;

                while (*p == '0')
                      {
                      лево--;
                      p++;
                      }

                // If the цифры consist of nothing but zeros...
                if (лево == 0)
                   {
                   значение = 0.0;
                   return да;
                   }

                // Get цифры, 9 at a время.
                цел n = (лево > 9) ? 9 : лево;
                лево -= n;
                бдол биты = дайЦифры(p, n);
                if (лево > 0)
                   {
                   n = (лево > 9) ? 9 : лево;
                   лево -= n;
                   биты = mult64(cast(бцел)биты, cast(бцел)(pow10[n - 1] >>> (64 - pow10Exp[n - 1])));
                   биты += дайЦифры(p + 9, n);
                   }

                цел шкала = this.шкала - (счёт - лево);
                цел s = (шкала < 0) ? -шкала : шкала;

                if (s >= 352)
                   {
                   *cast(дол*)&значение = (шкала > 0) ? 0x7FF0000000000000 : 0;
                   return нет;
                   }

                // Normalise mantissa и биты.
                цел bexp = 64;
                цел nzero;
                if ((биты >> 32) != 0)
                     nzero = 32;

                if ((биты >> (16 + nzero)) != 0)
                     nzero += 16;

                if ((биты >> (8 + nzero)) != 0)
                     nzero += 8;

                if ((биты >> (4 + nzero)) != 0)
                     nzero += 4;

                if ((биты >> (2 + nzero)) != 0)
                     nzero += 2;

                if ((биты >> (1 + nzero)) != 0)
                     nzero++;

                if ((биты >> nzero) != 0)
                     nzero++;

                биты <<= 64 - nzero;
                bexp -= 64 - nzero;

                // Get десяток exponent.
                if ((s & 15) != 0)
                   {
                   цел expMult = pow10Exp[(s & 15) - 1];
                   bexp += (шкала < 0) ? ( -expMult + 1) : expMult;
                   биты = mult64L(биты, pow10[(s & 15) + ((шкала < 0) ? 15 : 0) - 1]);
                   if ((биты & 0x8000000000000000L) == 0)
                      {
                      биты <<= 1;
                      bexp--;
                      }
                   }

                if ((s >> 4) != 0)
                   {
                   цел expMult = pow10Exp[15 + ((s >> 4) - 1)];
                   bexp += (шкала < 0) ? ( -expMult + 1) : expMult;
                   биты = mult64L(биты, pow10[30 + ((s >> 4) + ((шкала < 0) ? 21 : 0) - 1)]);
                   if ((биты & 0x8000000000000000L) == 0)
                      {
                      биты <<= 1;
                      bexp--;
                      }
                   }

                // Round и шкала.
                if (cast(бцел)биты & (1 << 10) != 0)
                   {
                   биты += (1 << 10) - 1 + (биты >>> 11) & 1;
                   биты >>= 11;
                   if (биты == 0)
                       bexp++;
                   }
                else
                   биты >>= 11;

                bexp += 1022;
                if (bexp <= 0)
                   {
                   if (bexp < -53)
                       биты = 0;
                   else
                      биты >>= ( -bexp + 1);
                   }
                биты = (cast(бдол)bexp << 52) + (биты & 0x000FFFFFFFFFFFFFL);

                if (знак)
                    биты |= 0x8000000000000000L;

                значение = *cast(дво*) & биты;
                return да;
        }



        /**********************************************************************

        **********************************************************************/

        private ткст вТкстФормат (ref Результат результат, ткст формат, ФорматЧисла nf)
        {
                бул естьГруппы;
                цел счётГрупп;
                цел позГруппы = -1, позТочки = -1;
                цел первый = цел.max, последний, счёт;
                бул scientific;
                цел n;
                сим c;

                while (n < формат.length)
                      {
                      c = формат[n++];
                      switch (c)
                             {
                             case '#':
                                  счёт++;
                                  break;

                             case '0':
                                  if (первый == цел.max)
                                      первый = счёт;
                                  счёт++;
                                  последний = счёт;
                                  break;

                             case '.':
                                  if (позТочки < 0)
                                      позТочки = счёт;
                                  break;

                             case ',':
                                  if (счёт > 0 && позТочки < 0)
                                     {
                                     if (позГруппы >= 0)
                                        {
                                        if (позГруппы == счёт)
                                           {
                                           счётГрупп++;
                                           break;
                                           }
                                        естьГруппы = да;
                                        }
                                     позГруппы = счёт;
                                     счётГрупп = 1;
                                     }
                                  break;

                             case '\'':
                             case '\"':
                                   while (n < формат.length && формат[n++] != c)
                                         {}
                                   break;

                             case '\\':
                                  if (n < формат.length)
                                      n++;
                                  break;

                             default:
                                  break;
                             }
                      }

                if (позТочки < 0)
                    позТочки = счёт;

                цел исправь;
                if (позГруппы >= 0)
                   {
                   if (позГруппы == позТочки)
                       исправь -= счётГрупп * 3;
                   else
                      естьГруппы = да;
                   }

                if (цифры[0] != '\0')
                   {
                   шкала += исправь;
                   округли(scientific ? счёт : шкала + счёт - позТочки);
                   }

                первый = (первый < позТочки) ? позТочки - первый : 0;
                последний = (последний > позТочки) ? позТочки - последний : 0;

                цел поз = позТочки;
                цел extra;
                if (!scientific)
                   {
                   поз = (шкала > позТочки) ? шкала : позТочки;
                   extra = шкала - позТочки;
                   }

                ткст групповойРазделитель = nf.разделительЧисловыхГрупп;
                ткст десятичнРазделитель = nf.разделительЧисловыхДесятков;

                // Work out the positions of the группа разделитель.
                цел[] положенияГрупп;
                цел groupIndex = -1;
                if (естьГруппы)
                   {
                   if (nf.размерыЧисловыхГрупп.length == 0)
                       естьГруппы = нет;
                   else
                      {
                      цел размерыГруппВсего = nf.размерыЧисловыхГрупп[0];
                      цел размерГруппы = размерыГруппВсего;
                      цел цифрВсего = поз + ((extra < 0) ? extra : 0);
                      цел digitCount = (первый > цифрВсего) ? первый : цифрВсего;

                      цел sizeIndex;
                      while (digitCount > размерыГруппВсего)
                            {
                            if (размерГруппы == 0)
                                break;

                            положенияГрупп ~= размерыГруппВсего;
                            groupIndex++;

                            if (sizeIndex < nf.размерыЧисловыхГрупп.length - 1)
                                размерГруппы = nf.размерыЧисловыхГрупп[++sizeIndex];

                            размерыГруппВсего += размерГруппы;
                            }
                      }
                }

                //ткст результат;
                if (знак)
                    результат ~= nf.отрицатЗнак;

                auto p = цифры.ptr;
                n = 0;
                бул pointWritten;

                while (n < формат.length)
                      {
                      c = формат[n++];
                      if (extra > 0 && (c == '#' || c == '0' || c == '.'))
                         {
                         while (extra > 0)
                               {
                               результат ~= (*p != '\0') ? *p++ : '0';

                               if (естьГруппы && поз > 1 && groupIndex >= 0)
                                  {
                                  if (поз == положенияГрупп[groupIndex] + 1)
                                     {
                                     результат ~= групповойРазделитель;
                                     groupIndex--;
                                     }
                                  }
                               поз--;
                               extra--;
                               }
                         }

                      switch (c)
                             {
                             case '#':
                             case '0':
                                  if (extra < 0)
                                     {
                                     extra++;
                                     c = (поз <= первый) ? '0' : сим.init;
                                     }
                                  else
                                     c = (*p != '\0') ? *p++ : поз > последний ? '0' : сим.init;

                                  if (c != сим.init)
                                     {
                                     результат ~= c;

                                     if (естьГруппы && поз > 1 && groupIndex >= 0)
                                        {
                                        if (поз == положенияГрупп[groupIndex] + 1)
                                           {
                                           результат ~= групповойРазделитель;
                                           groupIndex--;
                                           }
                                        }
                                     }
                                  поз--;
                                  break;

                             case '.':
                                  if (поз != 0 || pointWritten)
                                      break;
                                  if (последний < 0 || (позТочки < счёт && *p != '\0'))
                                     {
                                     результат ~= десятичнРазделитель;
                                     pointWritten = да;
                                     }
                                  break;

                             case ',':
                                  break;

                             case '\'':
                             case '\"':
                                  if (n < формат.length)
                                      n++;
                                  break;

                             case '\\':
                                  if (n < формат.length)
                                      результат ~= формат[n++];
                                  break;

                             default:
                                  результат ~= c;
                                  break;
                             }
                      }
                return результат.получи;
        }

