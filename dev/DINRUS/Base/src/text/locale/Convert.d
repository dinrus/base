private enum {
             ЭКСП = 0x7ff,
             ФЛАГ_НЧ = 0x80000000,
             ФЛАГ_БЕСК = 0x7fffffff,
             }

 export ткст форматируйДво (ткст вывод, дво значение, ткст формат, ФорматЧисла nf)
{
        цел длина;
        цел точность = 6;
        Результат результат = Результат (вывод);
        сим определитель = разборОпределенияФормата (формат, длина);

        switch (определитель)
               {
               case 'r':
               case 'R':
                    Число число = Число (значение, 15);

                    if (число.шкала == ФЛАГ_НЧ)
                        return nf.символНЧ;

                    if (число.шкала == ФЛАГ_БЕСК)
                        return число.знак ? nf.отрицатСимволБесконечности
                                           : nf.положитСимволБесконечности;

                    дво d;
                    число.вДво(d);
                    if (d == значение)
                        return вТкст (число, результат, 'G', 15, nf);

                    число = Число(значение, 17);
                    return вТкст (число, результат, 'G', 17, nf);

               case 'g':
               case 'G':
                    if (длина > 15)
                        точность = 17;
                    // Fall through.

               default:
                    break;
        }

        Число число = Число(значение, точность);

        if (число.шкала == ФЛАГ_НЧ)
            return nf.символНЧ;

        if (число.шкала == ФЛАГ_БЕСК)
            return число.знак ? nf.отрицатСимволБесконечности
                               : nf.положитСимволБесконечности;

        if (определитель != сим.init)
            return вТкст (число, результат, определитель, длина, nf);

        return число.вТкстФормат (результат, формат, nf);
}

