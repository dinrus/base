 export ткст форматируйЦелое (ткст вывод, дол значение, ткст формат, ФорматЧисла nf)
{
        цел     длина;
        auto    определитель = разборОпределенияФормата (формат, длина);

        switch (определитель)
               {
               case 'g':
               case 'G':
                    if (длина > 0)
                        break;
                    // Fall through.

               case 'd':
               case 'D':
                    return долВТкст (вывод, значение, длина, nf.отрицатЗнак);

               case 'x':
               case 'X':
                    return долВГексТкст (вывод, cast(бдол)значение, длина, определитель);

               case 'b':
               case 'B':
                    return долВБинТкст (вывод, cast(бдол)значение, длина);

               default:
                    break;
               }

        Результат результат = Результат (вывод);
        Число число = Число (значение);
        if (определитель != сим.init)
            return вТкст (число, результат, определитель, длина, nf);

        return число.вТкстФормат (результат, формат, nf);
}

