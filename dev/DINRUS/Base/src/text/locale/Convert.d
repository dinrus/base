/*******************************************************************************

*******************************************************************************/

проц форматируйФиксированно (ref Число число, ref Результат мишень, цел длина,
                  цел[] размерыГруппы, ткст десятичнРазделитель, ткст групповойРазделитель)
{
        цел поз = число.шкала;
        auto p = число.цифры.ptr;

        if (поз > 0)
           {
           if (размерыГруппы.length != 0)
              {
              // Calculate whether we have enough цифры в_ формат.
              цел счёт = размерыГруппы[0];
              цел индекс, размер;

              while (поз > счёт)
                    {
                    размер = размерыГруппы[индекс];
                    if (размер == 0)
                        break;

                    if (индекс < размерыГруппы.length - 1)
                       индекс++;

                    счёт += размерыГруппы[индекс];
                    }

              размер = (счёт == 0) ? 0 : размерыГруппы[0];

              // Insert the разделитель according в_ размерыГруппы.
              цел конец = симвОкончание(p);
              цел старт = (поз < конец) ? поз : конец;


              ткст разделитель = групповойРазделитель;
              индекс = 0;

              // questionable: use the задний конец of the вывод буфер в_
              // формат the разделители, и then копируй задний в_ старт
              ткст temp = мишень.черновик;
              бцел ii = temp.length;

              for (цел c, i = поз - 1; i >= 0; i--)
                  {
                  temp[--ii] = (i < старт) ? число.цифры[i] : '0';
                  if (размер > 0)
                     {
                     c++;
                     if (c == размер && i != 0)
                        {
                        бцел iii = ii - разделитель.length;
                        temp[iii .. ii] = разделитель;
                        ii = iii;

                        if (индекс < размерыГруппы.length - 1)
                            размер = размерыГруппы[++индекс];

                        c = 0;
                        }
                     }
                  }
              мишень ~= temp[ii..$];
              p += старт;
              }
           else
              {
              while (поз > 0)
                    {
                    мишень ~= (*p != '\0') ? *p++ : '0';
                    поз--;
                    }
              }
           }
        else
           // Negative шкала.
           мишень ~= '0';

        if (длина > 0)
           {
           мишень ~= десятичнРазделитель;
           while (поз < 0 && длина > 0)
                 {
                 мишень ~= '0';
                 поз++;
                 длина--;
                 }

           while (длина > 0)
                 {
                 мишень ~= (*p != '\0') ? *p++ : '0';
                 длина--;
                 }
           }
}

/******************************************************************************

******************************************************************************/

ткст вТкст (ref Число число, ref Результат результат, сим формат, цел длина, ФорматЧисла nf)
{
        switch (формат)
               {
               case 'c':
               case 'C':
                     // Currency
                     if (длина < 0)
                         длина = nf.валютнДесятичнЦифры;

                     число.округли(число.шкала + длина);
                     форматируйВалюту (число, результат, длина, nf);
                     break;

               case 'f':
               case 'F':
                     // Fixed
                     if (длина < 0)
                         длина = nf.члоДесятичнЦифр;

                     число.округли(число.шкала + длина);
                     if (число.знак)
                         результат ~= nf.отрицатЗнак;

                     форматируйФиксированно (число, результат, длина, пусто, nf.разделительЧисловыхДесятков, пусто);
                     break;

               case 'n':
               case 'N':
                     // Число
                        if (длина < 0)
                            длина = nf.члоДесятичнЦифр;

                     число.округли (число.шкала + длина);
                     форматируйЧисло (число, результат, длина, nf);
                     break;

               case 'g':
               case 'G':
                     // General
                     if (длина < 1)
                         длина = число.точность;

                     число.округли(длина);
                     if (число.знак)
                         результат ~= nf.отрицатЗнак;

                     форматируйВОбщем (число, результат, длина, cast(сим)((формат == 'g') ? 'e' : 'Е'), nf);
                     break;

               default:
                     return "{непригодный определитель формата FP '" ~ формат ~ "'}";
               }
        return результат.получи;
}


